@import 'utils/colors'
@import 'utils/transitions'

.button
  border-radius 2px
  font-size 11px
  font-weight 600
  letter-spacing .8px
  min-width 90px
  padding 9px 20px 10px
  text-align center
  transition transition-background-hover
  
  &:hover
    cursor pointer

  &--primary
    color white
    background accent
    width 100px

    &:hover
      background saturate(darken(accent, 15%), 35%)
